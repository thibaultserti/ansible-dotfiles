#==========================================================
# Neomutt Guide Colors
#==========================================================

#==========================================================
set pager_index_lines = 5
set help = yes
set status_on_top = no
set sidebar_visible = no

# <KEY>
color body brightdefault  blue "<[[:print:]]+>"
# neomutt 'names' (Index, Pager,)
color body cyan default "'index'"
color body cyan default "'pager'"

#==========================================================
# Accounts
#==========================================================

{% for account in accounts %}
source ~/{{ neomutt_dir }}/accounts/account-{{ account.user }}
folder-hook '{{ account.user }}' 'source ~/{{ neomutt_dir }}/accounts/account-{{ account.user }}'
{% endfor %}

{% for account in accounts %}
macro index,pager <{{ account.shortcut }}> '<sync-mailbox><enter-command>source ~/{{ neomutt_dir }}/accounts/account-{{ account.user }}<enter><change-folder>!<enter>'
{% endfor %}
